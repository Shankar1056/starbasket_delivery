<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardElevation="3dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp">
            <TextView
                    android:id="@+id/orderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="15dp"
                    android:textSize="13sp"
                    android:text="@string/order_Id"
                    android:fontFamily="@font/roboto"/>
            <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_margin="15dp"
                      android:textSize="15sp"
                      android:text="f ew rga rgrg"
                      android:fontFamily="@font/roboto_medium"/>
            <View android:id="@+id/view"
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  app:layout_constraintTop_toBottomOf="@+id/orderText"
                  android:layout_marginTop="2dp"
                  android:background="@color/colorLine"/>
            <TextView
                    android:id="@+id/cusNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="15dp"
                    android:text="Customer Name: "
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:id="@+id/cusName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/view"
                    app:layout_constraintLeft_toRightOf="@+id/cusNameText"
                    android:layout_margin="15dp"
                    android:text="Customer Name: "
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:id="@+id/cusPhoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cusNameText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:text="Customer Phone: "
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:id="@+id/cusPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cusNameText"
                    app:layout_constraintLeft_toRightOf="@+id/cusPhoneText"
                    android:layout_marginLeft="15dp"
                    android:text="801547896 "
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:id="@+id/cusAdressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cusPhoneText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:text="Customer Address: "
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"/>
            <TextView
                    android:id="@+id/cusAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cusPhoneText"
                    app:layout_constraintLeft_toRightOf="@+id/cusAdressText"
                    android:layout_marginLeft="15dp"
                    android:text="jnflknggnoieat jajpojt4  "
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="@+id/cusName"
                       app:layout_constraintBottom_toBottomOf="@+id/cusAdressText"
                       android:background="@mipmap/ic_arrow_right"
                       android:layout_marginRight="10dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>